<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/nutS01"
        android:text="Nút số 1"
        android:textSize="20dp"
        android:textColor="#EAD83E"
        android:background="#19476E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/nutS02"
        android:text="Nút số 2"
        android:textSize="20dp"
        android:textColor="#A5A391"
        android:background="#038BFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/nutS03"
        android:text="Nút số 3"
        android:textSize="20dp"
        android:textColor="#FDFDFC"
        android:background="#19476E"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        />
</LinearLayout>